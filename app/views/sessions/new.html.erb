<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
<main>
  <div class="columns is-centered is-flex is-align-items-center" style="height: 100vh">
    <div class="column is-one-third">
      <h1 class="title has-text-centered">Login</h1>
      <%= form_with url: 'login', local: true do |f| %>
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <div class="control">
            <%= f.email_field :email, class: 'input', placeholder: 'Email' %>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, class: 'label'%>
          <div class="control">
            <%= f.password_field :password, class: 'input', placeholder: 'Senha' %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.submit 'Login', class: 'button is-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>
<footer></footer>
</body>
</html>