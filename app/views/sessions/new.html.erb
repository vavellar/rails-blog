<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
<main>
  <div class="columns is-centered is-flex is-align-items-center" style="height: 100vh">
    <div class="box p-6">
        <div class="is-flex is-justify-content-center mb-6">
          <%= image_tag "logo_somus.svg" %>
        </div>
        <%= form_with url: 'login', local: true do |f| %>
          <div class="field">
            <%= f.label :email, class: 'label' %>
            <div class="control">
              <%= f.email_field :email, class: 'input', placeholder: 'Email' %>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, class: 'label'%>
            <div class="control">
              <%= f.password_field :password, class: 'input', placeholder: 'Senha' %>
            </div>
          </div>
          <div class="field">
            <div class="control is-justify-content-center is-flex mt-6">
              <%= f.submit 'Entrar', class: 'button is-info' %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</main>
</body>
</html>