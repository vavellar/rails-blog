<% content_for :page_title, @post.title %>


<section class="section">
  <div class="container">
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>

      <div class="level-right">
        <p class="level-item">
          <%= link_to 'Edit', '/posts/' + @post[:id].to_s + '/edit', class: 'button' %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", @post, method: "delete", class: 'button is-danger' %>
        </p>
      </div>
    </nav>

    <hr/>

    <h1 class="title">
      <%= @post.title %>
    </h1>
    <div class="container">
      <%= @post.content %>
    </div>
    <section class="comments">
      comments
    </section>
  </div>

</section>